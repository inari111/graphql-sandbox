# GraphQL schema example
#
# https://gqlgen.com/getting-started/

interface Node {
  id: ID!
}

type Todo implements Node {
  id: ID!
  text: String!
  done: Boolean!
  user: User!
}

type User implements Node {
  id: ID!
  name: String!
}

type Query {
  node(id: ID!): Node
  todos: [Todo!]!
}

input NewTodo {
  text: String!
  userId: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}
